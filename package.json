    "url": "https://github.com/ChrisAraneo/minecraft-player-number-notifier/issues"
  },
  "homepage": "https://github.com/ChrisAraneo/minecraft-player-number-notifier#readme",
  "devDependencies": {
    "@types/node": "^20.10.4",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "esbuild": "^0.19.9",
    "eslint": "^8.55.0",
    "eslint-plugin-jsonc": "^2.10.0",
    "eslint-plugin-prettier": "^5.0.1",
    "prettier": "^3.1.1",
